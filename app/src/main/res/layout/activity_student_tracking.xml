<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Título -->
    <TextView
        android:id="@+id/titleSeguimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seguimiento Escolar"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/darkBlue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp" />

    <!-- Información del estudiante -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/btnGrado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grado"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/btnAnoCurso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Año en Curso"/>
    </LinearLayout>

    <!-- Cards de seguimiento -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seguimientoRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnGrado"/>

    <!-- Botón de navegación -->
    <include
        layout="@layout/fragment_menu_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentBottom="true" />
</androidx.constraintlayout.widget.ConstraintLayout>