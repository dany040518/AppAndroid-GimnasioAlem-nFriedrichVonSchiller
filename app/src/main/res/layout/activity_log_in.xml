<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo -->
    <ImageView
        android:id="@+id/bgImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_login"
        android:contentDescription="Fondo"/>

    <!-- Banderas -->
    <ImageView
        android:id="@+id/banderas"
        android:layout_width="111dp"
        android:layout_height="72dp"
        android:src="@drawable/banderas"
        android:contentDescription="Banderas"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp" />

    <!-- Contenedor blanco -->
    <LinearLayout
        android:id="@+id/loginCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="24dp"
        android:elevation="8dp"
        android:layout_margin="24dp"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Icono de usuario redondo -->
        <ImageView
            android:id="@+id/userIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_user"
            android:backgroundTint="@color/transparentBlue"
            android:background="@drawable/circle_blue"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            app:tint="@android:color/white" />

        <!-- Campo de usuario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_user"
                android:layout_marginEnd="8dp"
                app:tint="@color/darkGray" />

            <EditText
                android:id="@+id/etUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Usuario"
                android:background="@null"
                android:textColorHint="@color/darkGray"
                android:textColor="@android:color/black"
                android:inputType="text"
                android:paddingBottom="4dp"/>
        </LinearLayout>

        <!-- Línea separadora -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Campo de contraseña -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_lock"
                android:layout_marginEnd="8dp"
                app:tint="@color/darkGray" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Contraseña"
                android:background="@null"
                android:textColorHint="@color/darkGray"
                android:textColor="@android:color/black"
                android:inputType="textPassword"
                android:paddingBottom="4dp"/>
        </LinearLayout>

        <!-- Línea separadora -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/black"
            android:layout_marginBottom="8dp" />

        <!-- Enlace de olvidar contraseña -->
        <TextView
            android:id="@+id/tvOlvido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Olvidó su contraseña?"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp"
            android:layout_marginBottom="24dp"
            android:layout_gravity="start"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openForgotPassword"/>

        <!-- Botón ingresar -->
        <Button
            android:id="@+id/btnIngresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresar"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="@color/yellow"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>