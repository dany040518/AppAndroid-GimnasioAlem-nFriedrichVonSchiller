<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <FrameLayout
        android:id="@+id/upContainer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/darkGray"
        android:layout_marginBottom="430dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Imagen de perfil -->
        <ImageView
            android:id="@+id/userImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="55dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user"
            android:background="@drawable/circle_white_border"
            android:layout_gravity="start|top" />

        <!-- Texto de bienvenida -->
        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIENVENIDO!"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="70dp"
            android:layout_marginStart="130dp"
            android:layout_gravity="start|top" />

        <!-- Nombre del usuario -->
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tu Nombre"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="100dp"
            android:layout_marginStart="130dp"
            android:layout_gravity="start|top" />

        <!-- Botón de mensajes -->
        <ImageButton
            android:id="@+id/messageButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="end|top"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/circle_yellow"
            android:scaleType="center"
            android:src="@drawable/ic_email" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-45dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upContainer">

        <!-- Botón Seguimiento Escolar -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_dark_blue_rounded">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_school_monitoring" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Seguimiento Escolar"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </FrameLayout>

        <!-- Botón Horario de Clases -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/btn_dark_blue_rounded">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_class_schedule" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Horario de Clases"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </FrameLayout>

        <!-- Botón Mis Tareas -->
        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/btn_dark_blue_rounded">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="top|center_horizontal"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_my_tasks" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Mis Tareas"
                android:textColor="@android:color/white"
                android:textSize="15sp" />
        </FrameLayout>
    </LinearLayout>

    <!-- Titulo Galeria -->
    <TextView
        android:id="@+id/tvGaleria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:paddingBottom="4dp"
        android:text="Galería"
        android:textColor="@color/darkBlue"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upContainer" />

    <!-- Scroll de Fotos -->
    <HorizontalScrollView
        android:id="@+id/scrollViewGaleria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvGaleria">

        <LinearLayout
            android:id="@+id/linearLayoutGalery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>

    <include
        layout="@layout/menu_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_alignParentBottom="true" />

</androidx.constraintlayout.widget.ConstraintLayout>