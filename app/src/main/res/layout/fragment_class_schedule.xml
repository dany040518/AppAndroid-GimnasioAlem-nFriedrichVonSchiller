<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparentBlue"
    android:visibility="gone"
    android:id="@+id/openScheduleOverlay">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@android:color/white"
        android:alpha="0.8" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/forms_background"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/formTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HORARIO DE CLASES"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/darkBlue"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00"
                    android:textColor="#0C0C25"
                    android:paddingEnd="5dp"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clase"
                    android:gravity="center"
                    android:textColor="#0C0C25"
                    android:paddingEnd="5dp"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00"
                    android:textColor="#0C0C25"
                    android:paddingEnd="5dp"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DESCANSO"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@color/darkGray"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:30"
                    android:textColor="#0C0C25"
                    android:paddingEnd="5dp"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ALMUERZO"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:background="@color/darkGray"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14:45"
                    android:textColor="#0C0C25"
                    android:paddingEnd="5dp"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Clase"
                    android:gravity="center"
                    android:textColor="#0C0C25"
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnCloseScheduleOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/darkBlue"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:onClick="closeScheduleOverlay" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>